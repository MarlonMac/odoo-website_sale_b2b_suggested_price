<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_website_sale_suggested_price" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.sale.suggested.price</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='website']" position="inside">
                <h2 id="dual_price_setting_title">Vista de Doble Precio (B2B)</h2>
                <div class="row mt16 o_settings_container" id="dual_price_settings">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="website_enable_dual_price"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="website_enable_dual_price"/>
                            <div class="text-muted">
                                Mostrar un precio de referencia junto al precio del cliente.
                            </div>
                            <div class="content-group mt16" attrs="{'invisible': [('website_enable_dual_price', '=', False)]}">
                                <div class="row">
                                    <label class="col-lg-4 o_light_label" for="website_suggested_pricelist_id"/>
                                    <field name="website_suggested_pricelist_id"
                                           attrs="{'required': [('website_enable_dual_price', '=', True)]}"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-6 o_setting_box" id="margin_calculation_settings" attrs="{'invisible': [('website_enable_dual_price', '=', False)]}">
                        <div class="o_setting_left_pane">
                            <field name="website_show_margin"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="website_show_margin" string="Calcular Margen de Ahorro"/>
                            <div class="text-muted">
                                Muestra el ahorro del distribuidor (en monto o porcentaje).
                            </div>
                            <div class="content-group mt16" attrs="{'invisible': [('website_show_margin', '=', False)]}">
                                <div class="row">
                                    <label class="col-lg-5 o_light_label" for="website_margin_display_type"/>
                                    <field name="website_margin_display_type" widget="radio"/>
                                </div>
                                <div class="row mt8">
                                    <label class="col-lg-5 o_light_label" for="website_allow_user_margin_type_change"/>
                                    <field name="website_allow_user_margin_type_change"/>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </xpath>
        </field>
    </record>
</odoo>